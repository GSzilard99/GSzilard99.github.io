{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/GSzilard99/GSzilard99.github.io-/main/Coke%20and%20Heroin.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "selectedMetric",
      "value": "Wholesale Price",
      "bind": {
        "input": "select",
        "options": [
          "Wholesale Price",
          "Retail Price"
        ],
        "name": "Kereskedelmi típus: "
      }
    },
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [
          1990, 1991, 1992, 1993, 1994, 1995, 1996, 1997, 1998, 1999, 
          2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 
          2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020
        ],
        "name": "Év: "
      }
    },
    {
      "name": "selectedDrug",
      "value": "Cocaine",
      "bind": {
        "input": "select",
        "options": ["Cocaine", "Heroin"],
        "name": "Kábítószer:"
      }
    },
    {
      "name": "xTitle",
      "value": "Wholesale Price",
      "expr": "selectedMetric"
    }
  ],
  "transform": [
    {
      "filter": "datum[selectedMetric] != null && datum.Year == selectedYear && datum.Drug == selectedDrug"
    },
    {
      "calculate": "datum[selectedMetric]",
      "as": "metricValue"
    }
  ],
  "mark": {"type": "bar", "color": "#31473A"},
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": {"field": "metricValue", "order": "descending"}
    },
    "x": {
      "field": "metricValue",
      "type": "quantitative",
      "title": {"signal": "xTitle"}
    },
    "tooltip": [
      {"field": "Country", "title": "Country"},
      {"field": "metricValue", "title": "Ára"},
      {"field": "Year", "title": "Év"}
    ]
  },
  "title": {
    "text": "Egyes kábítószerek ára a kiválasztott időszakban",
    "subtitle": "forrás: https://data.world/makeovermonday/2022w46",
    "subtitleFont": "Timesnewroman",
    "subtitleFontWeight": "lighter"
  },
  "width": 750,
  "height": 500,
  "config": {
    "view": {"stroke": "transparent"}
  },
  "background": "#EDF4F2"
}
